<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Actions -->
        <record id="hotel_customer_action" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">hotel.customer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree View -->
        <record id="hotel_customer_tree" model="ir.ui.view">
            <field name="name">hotel.customer.tree</field>
            <field name="model">hotel.customer</field>
            <field name="arch" type="xml">
                <tree default_order="name">
                    <field name="name"/>
                    <field name="identity_card"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="hotel_customer_form" model="ir.ui.view">
            <field name="name">hotel.customer.form</field>
            <field name="model">hotel.customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group name="info">
                            <field name="identity_card"/>
                            <field name="phone"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="hotel_customer_search" model="ir.ui.view">
            <field name="name">hotel.customer.search</field>
            <field name="model">hotel.customer</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="identity_card"/>
                </search>
            </field>
        </record>
    </data>
</odoo>