<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Actions -->
        <record id="hotel_room_action" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="res_model">hotel.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree View -->
        <record id="hotel_room_tree" model="ir.ui.view">
            <field name="name">hotel.room.tree</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="floor"/>
                    <field name="type_id"/>
                    <field name="price_per_night"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="hotel_room_form" model="ir.ui.view">
            <field name="name">hotel.room.form</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="floor"/>
                            <field name="type_id"/>
                            <field name="price_per_night"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>