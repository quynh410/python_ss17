<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View (Danh sách) -->
    <record id="library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'borrowed'"
                  decoration-success="state == 'available'"
                  decoration-muted="state == 'lost'">
                <field name="name"/>
                <field name="short_description"/>
                <field name="isbn"/>
                <field name="category_id"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="purchase_date"/>
                <field name="days_since_purchase"/>
                <field name="total_loans"/>
                <field name="year"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View (Chi tiết) -->
    <record id="library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="isbn"/>
                        </h2>
                        <field name="condition" widget="priority"/>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="purchase_date"/>
                            <field name="days_since_purchase"/>
                            <field name="total_loans"/>
                            <field name="year"/> 
                        </group>
                        <group>
                            <field name="author_ids" widget="many2many_tags"/>
                            <field name="short_description"/>
                            <field name="notes"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lịch sử mượn trả">
                            <field name="loan_ids" mode="tree,form">
                                <tree editable="bottom">
                                    <field name="borrower_name"/>
                                    <field name="borrow_date"/>
                                    <field name="return_date"/>
                                    <field name="duration"/>
                                    <field name="is_returned"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Thông tin Kho" groups="library_cou.group_library_librarian">
                            <group>
                                <field name="purchase_price"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="isbn"/>
                <filter string="Sách có sẵn" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Sách mới nhập" name="draft" domain="[('state', '=', 'draft')]"/>
                <group expand="0" string="Group By">
                    <filter string="Thể loại" name="groupby_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Tác giả" name="groupby_author" context="{'group_by': 'author_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action mở giao diện -->
    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Tất cả đầu sách</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="library_book_search"/>
    </record>
</odoo>
